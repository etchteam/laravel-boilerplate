{
  "name": "laravel-boilerplate",
  "version": "1.0.0",
  "private": true,
  "author": "Red Bullet",
  "license": "ISC",
  "scripts": {
    "build": "gulp --production",
    "serve": "gulp && gulp watch",
    "lint": "gulp lint"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.0.1",
    "ghooks": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-phpcs": "^1.1.1",
    "gulp-phplint": "^0.1.0",
    "gulp-scss-lint": "^0.4.0",
    "laravel-elixir": "^6.0.0-9",
    "laravel-elixir-browserify-official": "^0.1.3",
    "laravel-elixir-browsersync-official": "^1.0.0",
    "normalize.css": "^4.2.0",
    "validate-commit-msg": "^2.6.1"
  },
  "engines": {
    "node": ">=6.3.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "post-merge": "npm install && composer install && bundle install && php artisan migrate",
      "post-rewrite": "npm install && composer install && bundle install && php artisan migrate",
      "pre-push": "php artisan migrate --database=pgsql_test && phpunit --stop-on-failure"
    }
  }
}
