{
  "name": "laravel-boilerplate",
  "version": "1.0.0",
  "private": true,
  "author": "Red Bullet",
  "license": "ISC",
  "scripts": {
    "build": "gulp --production",
    "serve": "gulp && gulp watch",
    "lint": "gulp lint",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg",
    "postmerge": "npm install && composer install && bundle install && php artisan migrate --database=pgsql_remote",
    "postrewrite": "npm install && composer install && bundle install && php artisan migrate --database=pgsql_remote",
    "prepush": "php artisan migrate --database=pgsql_test && vendor/phpunit/phpunit/phpunit --stop-on-failure"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.0.1",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-phpcs": "^1.1.1",
    "gulp-phplint": "^0.1.0",
    "gulp-scss-lint": "^0.4.0",
    "highlight.js": "^9.5.0",
    "husky": "^0.11.7",
    "laravel-elixir": "^6.0.0-9",
    "laravel-elixir-browserify-official": "^0.1.3",
    "laravel-elixir-browsersync-official": "^1.0.0",
    "node-sass-globbing": "0.0.23",
    "normalize.css": "^4.2.0",
    "validate-commit-msg": "^2.6.1"
  },
  "engines": {
    "node": ">=6.3.0"
  }
}
